{
  "name": "datacontract-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite src",
    "build": "vite build src --outDir ../dist --emptyOutDir",
		"update-templates": "npm run load-templates && npm run precompile-templates",
		"load-templates": "node scripts/load_templates.js",
    "precompile-templates": "node_modules/nunjucks/bin/precompile templates > src/templates/templates.js",
    "lint": "eslint"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "lit": "^3.1.4",
    "monaco-editor": "0.49.0",
    "monaco-yaml": "5.1.1",
    "nunjucks": "^3.2.4",
    "split-grid": "^1.0.11"
  },
  "devDependencies": {
    "@eslint/js": "9.4.0",
    "autoprefixer": "^10.4.19",
    "css-loader": "^6.0.0",
    "eslint": "9.4.0",
    "globals": "15.4.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^5.2.13"
  }
}
