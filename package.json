{
  "name": "datacontract-editor",
  "version": "0.1.0",
  "description": "A visual editor for data contracts using the Open Data Contract Standard (ODCS)",
  "type": "module",
  "bin": {
    "datacontract-editor": "./bin/datacontract-editor.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.config.lib.js",
    "build:all": "npm run build && npm run build:lib",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "start": "node bin/datacontract-editor.js"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "open": "^10.1.0",
    "@headlessui/react": "^2.2.9",
    "@monaco-editor/react": "^4.7.0",
    "@xyflow/react": "^12.9.0",
    "dagre": "^0.8.5",
    "monaco-yaml": "^5.4.0",
    "path-browserify": "^1.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "yaml": "^2.8.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2",
    "vite-plugin-monaco-editor": "^1.1.0"
  }
